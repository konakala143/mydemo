<!doctype html>
<html>
<head>
    <%- include('header.ejs')-%>
    <title>update</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> updation</h1>

    <% if (msgType === 'success') { %>
        <div class="alert alert-success"><%= message %></div>
    <% }else if(msgType === 'warning'){ %>
        <div class="alert alert-warning"><%= message %></div>
    <% }else if(msgType === 'error'){ %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    

    <!-- update FORM -->
    <form action="/users/update" method="post">
        <div class="form-group">
            <label> Name </label>
            <input type="text" value="<%=data.Name%>"  class="form-control" name="Name" required>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" value="<%=data.Email%>" class="form-control" name="Email"   readonly>
        </div>
        
        <div class="form-group">
            <label>Phone</label>
            <input type="text" value="<%=data.Phone%>"  class="form-control" name="Phone">
        </div>
        <div class="form-group">
            <label>Country</label>
            <input type="text" value="<%=data.Country%>" class="form-control" name="Country" required>
        </div>
        <input type="checkbox" name="terms" id="terms"     onchange="activateButton(this)">  I Agree Terms & Coditions
        <br><br>
        
        <button type="update" class="btn btn-warning btn-lg">updation</button>
        
        
    </form>

</div>
</div>
</body>
</html>