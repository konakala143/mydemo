<!doctype html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <% if (msgType === 'success') { %>
        <div class="alert alert-success"><%= message %></div>
    <% }else if(msgType === 'warning'){ %>
        <div class="alert alert-warning"><%= message %></div>
    <% }else if(msgType === 'error'){ %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    
    

    <!-- LOGIN FORM -->
    <form action="/users/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" placeholder="Enter Email" class="form-control" name="email" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="Invalid email address" required>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" placeholder="Enter password" class="form-control" name="password"  required>
        </div>
        
        <br><br>
        <button type="submit" class="btn btn-warning btn-lg">Login</button>
        <p>No account yet?<a href="http://localhost:2024/users/register">Register</a></p>
        <p><a href="http://localhost:2024/users/ForgotPassword">ForgotPassword</a></p>
    </form>

</div>
</div>
</body>
</html>